3. Mandatory Input */
        IN_TXN_CODE : T24BusinessTypes:A
            @i18n:Label (en="In Txn Code")
            @i18n:Tooltip (en="In Transaction Code")
            @t24:i (align=L, inputBehaviour=I, maxLength=35, sysNumber=10.0, core=true, t24Name=IN.TXN.CODE)
