        @i18n:Description (en="")
        @t24:i (t24Name=IS.DISB.BALANCES, level=F, type=L, allowedFunctions="L P S", localRefAllowed=false)
    {
        DISBURSE_REF -> byValue IS_Payment:IS_DISB_BALANCES__DISBURSE_REF *
